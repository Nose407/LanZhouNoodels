@*@model IEnumerable<LanZhouNoodels.Models.Noodle> *@
@model LanZhouNoodels.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>列表</h1>
@foreach (var noodle in Model.Noodles)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@noodle.ImgUrl" alt="">
            <div class="caption">
                <h3 class="pull-right">￥@noodle.Price</h3>
                <h3>
                    <a asp-controller="Home"
                       asp-action="Detail"
                       asp-route-id="@noodle.Id">@noodle.Name</a>
                </h3>
                <p>@noodle.StrotDescription</p>
            </div>
        </div>
    </div>
}


<h1>反馈</h1>
<div class="list-group">
    @foreach (var feedback in Model.FeedBacks)
    {
        <a class="list-group-item">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="list-group-item-heading">@feedback.Name</h5>
                <small class="pull-right">@feedback.CreateDateUtc</small>
            </div>
            <p class="list-group-item-text">@feedback.Message</p>
        </a>
    }
</div>
