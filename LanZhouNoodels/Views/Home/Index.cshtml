@*@model IEnumerable<LanZhouNoodels.Models.Noodle> *@
@model LanZhouNoodels.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>列表</h1>

@foreach (var noodle in Model.Noodles)
{ 
    <div>
        <h2>@noodle.Name</h2>
        <h3>$ @noodle.Price</h3>
        <p>@noodle.StrotDescription</p>
    </div>
}

<h1>反馈</h1>
@foreach (var item in Model.FeedBacks)
{ 
    <h2>@item.Id</h2>
    <h2>@item.Name</h2>
    <p>@item.CreateDateUtc</p>
}